# === Core ===
ENV=dev
API_HOST=0.0.0.0
API_PORT=8000
# Укажи фронт-оригины, чтобы не было CORS-проблем
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173
MAX_UPLOAD_MB=25

# === Auth (демо) ===
JWT_SECRET=change_me
JWT_EXPIRES_MIN=60

# === LLM ===
LLM_PROVIDER=ollama          # варианты: ollama | openai | hf
LLM_MODEL=qwen2.5:3b         # для ollama: название пулловой модели
OLLAMA_HOST=http://ollama:11434
OPENAI_API_KEY=              # если захочешь переключиться на openai
HF_API_TOKEN=                # если будешь тянуть приватные модели HF

# === Embeddings ===
EMBED_PROVIDER=sbert         # sbert | hf | openai и т.п., зависит от твоей реализации
EMBED_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBED_DIM=384

# === Vector store ===
VECTOR_BACKEND=qdrant
QDRANT_URL=http://qdrant:6333
QDRANT_COLLECTION=kb

# === DB / storage ===
DB_URL=sqlite+aiosqlite:///./data/app.db
DOCSTORE_PATH=./data/chunks

# === Redis/Celery ===
REDIS_URL=redis://redis:6379/0

# === Telemetry ===
PROMETHEUS_ENABLED=true
API_METRICS_PATH=/metrics
WORKER_METRICS_PORT=8001

# --- Prompting ---
PROMPT_DIR=prompts
PROMPT_LANG=ru               # ru | en (используется для системной инструкции)
PROMPT_VARIANT=v1
PROMPT_STRICT=true
PROMPT_CITE=true
